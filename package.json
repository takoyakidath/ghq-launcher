{
  "name": "ghq-launcher",
  "displayName": "GHQ Launcher",
  "publisher": "takoyakidath",
  "description": "Open ghq repositories from the status bar.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": ["Other"],
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/takoyakidath/ghq-launcher.git"
  },
  "activationEvents": [
    "onCommand:ghqStatusPicker.open",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghqStatusPicker.open",
        "title": "GHQ: Open Repository"
      }
    ],
    "configuration": {
      "title": "GHQ Launcher",
      "properties": {
        "ghqStatusPicker.openInNewWindow": {
          "type": "boolean",
          "default": true,
          "description": "Open the selected repository in a new VS Code window."
        },
        "ghqStatusPicker.maxMRU": {
          "type": "number",
          "default": 15,
          "minimum": 0,
          "maximum": 100,
          "description": "How many recently opened repositories to keep."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
